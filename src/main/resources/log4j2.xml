<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp">
    <Appenders>
        <File name="MyFile" fileName="logs/hippodrome.log">
            <PatternLayout>
                <Pattern> %d{DEFAULT} %-5p %C{1} : %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root  level="info">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>